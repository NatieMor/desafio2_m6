<footer class="container text-white d-flex center-content-around  pt-5">
    <div class="inner">
        <h2>Contactanos</h2>
        <form method="post" action="#">
            <div class="fields">
                <div class="field half">
                    <input type="text" name="name" id="name" placeholder="Nombre" />
                </div>
                <br>
                <div class="field half">
                    <input type="email" name="email" id="email" placeholder="Email" />
                </div>
                <br>
                <div class="field">
                    <textarea name="message" id="message" placeholder="Mensaje"></textarea>
                </div>
            </div>
            <ul class="actions">
                <input type="submit" value="Send" class="primary bt-success" />
            </ul>
        </form>
    </div>
</footer>